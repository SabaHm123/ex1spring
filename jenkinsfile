pipeline {
    agent any

    tools {
        maven 'Maven_3.8.1' // Utilisez le nom exact de l'installation configur√©e
    }

    stages {
        stage("Clean up") {
            steps {
                deleteDir() // Nettoie le workspace avant de commencer
            }
        }

        stage("Checkout SCM") {
            steps {
                checkout scm
            }
        }

        stage("Build project") {
            steps {
                dir("${env.WORKSPACE}") {
                    sh "mvn clean package" // Compile le projet Maven
                }
            }
        }

        stage("Build Docker Image") {
            steps {
                dir("${env.WORKSPACE}") {
                    sh "docker build -t docexp1-spring ."
                }
            }
        }

        stage("Run Docker Compose") {
            steps {
                dir("Tp2Jenkins") {
                    sh "docker compose up -d"
                }
            }
        }
    }
}
